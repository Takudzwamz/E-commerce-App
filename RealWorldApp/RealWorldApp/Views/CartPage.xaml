<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:RealWorldApp.ViewModels"
             mc:Ignorable="d"
             x:Class="RealWorldApp.Pages.CartPage"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewmodels:CartPageVM/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="7.7*" />
                    <ColumnDefinition Width="1.3*" />
                </Grid.ColumnDefinitions>
                <Image Source="backarrow.png"
                       Grid.Column="0"
                       HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapBack" Tapped="TapBack_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Grid.Column="1"
                       TextColor="#ff5e14"
                       Text="Your Cart"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Grid.Column="2"
                       TextColor="#ff5e14"
                       Text="Clear"
                       FontSize="15"
                       CharacterSpacing="1"
                       FontAttributes="Bold"
                       VerticalTextAlignment="End"
                       HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ClearCartCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
            <ListView ItemsSource="{Binding ShoppingCartCollection}"
                      SelectionMode="None"
                      CachingStrategy="RecycleElement"
                      HasUnevenRows="True"
                      SeparatorColor="#80574D">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Margin="20,10,20,10">
                                <Label TextColor="#ff5e14"
                                       FontSize="Medium"
                                       Text="{Binding ProductName}"/>
                                <StackLayout Orientation="Horizontal">
                                    <Label CharacterSpacing="1"
                                           TextColor="#80574D"
                                           FontSize="Medium"
                                           Text="{Binding Quantity}"/>
                                    <Label Text="X"
                                           TextColor="#80574D"
                                           FontSize="Medium" />
                                    <Label CharacterSpacing="1"
                                           TextColor="#80574D"
                                           FontSize="Medium"
                                           Text="{Binding price}"/>
                                    <Label CharacterSpacing="1"
                                           TextColor="#80574D"
                                           FontSize="Medium"
                                           HorizontalOptions="EndAndExpand"
                                           Text="{Binding totalAmount ,StringFormat='ZAR {0}'}"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="EndAndExpand">
                <StackLayout HorizontalOptions="FillAndExpand"
                             Margin="30,0,0,10">
                    <Label Text="Total Price"
                           TextColor="#ff5e14"
                           FontSize="Medium" />
                    <StackLayout Orientation="Horizontal">
                        
                        <Label Text="ZAR"
                               TextColor="#80574D"
                               FontSize="Medium" />
                        <Label x:Name="LblTotalPrice" Text="{Binding TotalPrice, Mode=TwoWay}"
                               TextColor="#80574D"
                               FontSize="Medium" />
                        
                    </StackLayout>
                </StackLayout>
                <Button HorizontalOptions="FillAndExpand"
                        BackgroundColor="#ff5e14"
                        CornerRadius="30"
                        TextColor="White"
                        Text="Proceed"
                        x:Name="BtnProceed" 
                        Clicked="BtnProceed_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    